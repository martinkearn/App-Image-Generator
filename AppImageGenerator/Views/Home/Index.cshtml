@{
    ViewBag.Title = "App Image Generator";
}

<!-- Main jumbotron for a primary marketing message or call to action -->
<div class="jumbotron">
    <div class="container">
        <h1>@ViewBag.Title</h1>
        <p>Quickly and easily create app icons for various platforms in the right size and format</p>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <form id="imageFileInputForm" enctype="multipart/form-data" class="form-horizontal" role="form">
                <div class="form-group">
                    <label for="fileInput">Input Image</label>
                    <input type="file" class="form-control" name="fileInput" id="fileInput" placeholder="Image File">
                </div>
                <div class="form-group">
                    <label for="paddingInput">Padding</label>
                    <input type="number" name="padding" class="form-control" name="paddingInput"  id="paddingInput" value="0.3" min="0.0" max="1.0" step="0.05" />
                    <p><small>0 is no padding, 1 is 100% of the source image. 0.3 is a typical value for most icons</small></p>
                </div>
                <div class="form-group">
                    <label for="background-color">Background Colour</label>
                    <input name="background-color" id="background-color" class="form-control"  type="color" />
                    <p><small>Choose a color for the background (leave blank to default to the pixel at the top left):</small></p>
                </div>
                <div class="form-group">
                    <label >Platform</label>
                    <div class="radio">
                        <label>
                            <input type="radio" name="platform" id="optionsRadios1" value="ManifoldJS" checked>
                            ManifoldJS
                        </label>
                    </div>
                    <div class="radio">
                        <label>
                            <input type="radio" name="platform" id="optionsRadios2" value="WindowsUWP">
                            Windows 10 UWP
                        </label>
                    </div>
                    <div class="radio">
                        <label>
                            <input type="radio" name="platform" id="optionsRadios3" value="Windows8">
                            Windows 8
                        </label>
                    </div>
                    <div class="radio">
                        <label>
                            <input type="radio" name="platform" id="optionsRadios3" value="WindowsPhone8">
                            Windows Phone 8
                        </label>
                    </div>
                    <p><small>To request new platforms, <a href="mailto:martin.kearn@microsoft.com">contact me</a></small></p>
                </div>
                <div class="form-group">
                    <input id="downloadButton" type="button" class="btn btn-primary" value="Download" disabled="disabled" />
                </div>
            </form>
        </div>
    </div>
</div>